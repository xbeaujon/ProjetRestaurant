@{
    ViewBag.Title = "Home Page";
}

<h2>Accueil du Restaurant</h2>

<div class="container">
    <div class="row">
        <div class="col"><h2>Index</h2></div>
    </div>
    <div class="row">
        @foreach (var carte in Model.Cartes)
        {
            <div class="col">
                <div class="card">
                    <div class="card-header"><h2>@carte.Nom</h2></div>
                    <div class="card-body">@carte.Sections</div>
                </div>
            </div>
        }
    </div>
</div>
